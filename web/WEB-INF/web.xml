<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <!-- session config -->
    <servlet>
        <servlet-name>UserConfig</servlet-name>
        <servlet-class>servlet.process.HakiFitUserConfig</servlet-class>
        <init-param>
            <param-name>username</param-name>
            <param-value>username</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>password</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserConfig</servlet-name>
        <url-pattern>/UserConfig</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>HakiFitMainPage</servlet-name>
        <jsp-file>/HakiFit.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>HakiFitMainPage</servlet-name>
        <url-pattern>/Main-Page</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <!-- listener class -->
    <listener>
        <listener-class>context.listener.HakiFitAppListener</listener-class>
    </listener>
    <context-param>
        <param-name>headerValue</param-name>
        <param-value>Your header content here</param-value>
    </context-param>
    <context-param>
        <param-name>footerValue</param-name>
        <param-value>Your footer content here</param-value>
    </context-param>
    <!-- error pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error_404.jsp</location>
    </error-page>
    <error-page>
        <exception-type>your.package.AuthenticationException</exception-type>
        <location>/error_authentication.jsp</location>
    </error-page>
    <error-page>
        <exception-type>your.package.NullValueException</exception-type>
        <location>/error_nullvalue.jsp</location>
    </error-page>
    <!-- welcome page -->
    <welcome-file-list>
        <welcome-file>Login.jsp</welcome-file>
        <welcome-file>HakiFit.jsp</welcome-file>
    </welcome-file-list>
</web-app>
